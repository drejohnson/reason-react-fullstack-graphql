{
  "name": "reasonreact-fullstack",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "serve -s dist",
    "dev":
      "concurrently \"bsb -make-world -w\" \"webpack-serve ./webpack.config.js\"",
    "prebuild": "npm run clean:dist",
    "build": "bsb -make-world && NODE_ENV=production webpack",
    "postbuild": "npm run copy:public ",
    "copy:public": "node tools/copy.js",
    "clean:dist": "node tools/clean.js",
    "deploy:now": "now --public dist",
    "get-schema": "yarn send-introspection-query http://localhost:4000/"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-link": "^1.2.2",
    "apollo-link-context": "^1.0.8",
    "apollo-link-error": "^1.0.9",
    "apollo-link-http": "^1.5.4",
    "bs-css": "^6.7.0",
    "bs-dynamic-import": "^0.3.0",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "react": "^16.3.2",
    "react-apollo": "^2.1.3",
    "react-dom": "^16.3.2",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.1.2",
    "reason-apollo": "^0.7.4",
    "reason-loadable": "^0.4.0",
    "reason-react": "^0.4.0",
    "reason-reroute": "^0.0.4"
  },
  "devDependencies": {
    "bs-platform": "^3.0.0",
    "concurrently": "^3.5.1",
    "connect-history-api-fallback": "^1.5.0",
    "fs-extra": "^6.0.0",
    "graphql_ppx": "^0.2.1",
    "html-webpack-plugin": "^3.2.0",
    "koa-connect": "^2.0.1",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^2.1.2",
    "webpack-serve": "^0.3.2",
    "webpackbar": "^2.6.1",
    "workbox-webpack-plugin": "^3.1.0"
  }
}
